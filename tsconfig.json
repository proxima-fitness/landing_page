{
    "files": [],
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["./@types"]
  },
  "include": ["src",
  "**/*.ts",
  "**/*.tsx",
  "**/*.js",
  "**/*.jsx",
  "src/components",
  "src/custom.d.ts",
  "./dist/types/**/*.ts",
  "./next-env.d.ts",
 ],
 "exclude": [
    "./node_modules",
 ],
  "references": [
      {
        "path": "./tsconfig.app.json"
      },
    //   {
    //     "path": "./tsconfig.node.json"
    //   }
    ],
}
